        <Button x:Name="btnAuth" Content="Auth" HorizontalAlignment="Left" Margin="403,10,0,0" VerticalAlignment="Top" Width="110" FontSize="36" Click="btnAuth_Click" Height="62" />
        <Button x:Name="btnJwt" Content="JWT" HorizontalAlignment="Left" Margin="518,10,0,0" VerticalAlignment="Top" Width="110" FontSize="36" Height="62" Click="btnJwt_Click"/>
        <Button x:Name="btnEncrypted" Content="Encrypted" HorizontalAlignment="Left" Margin="633,10,0,0" VerticalAlignment="Top" Width="179" FontSize="36" Height="62" Click="btnEncrypted_Click" />
        <TextBlock x:Name="lblResults" HorizontalAlignment="Left" Margin="13,94,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="881" Width="1462" FontSize="36"/>
